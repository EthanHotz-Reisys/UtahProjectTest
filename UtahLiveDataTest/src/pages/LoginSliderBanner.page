<apex:page controller="CommunityLoginCtrl" standardstylesheets="false" showHeader="false" sidebar="false" >
    
    <apex:includeScript value="{!URLFOR($Resource.GovGrantsExternal, 'ImageScroll/JS/unslider.js')}" />
    <apex:stylesheet value="{!URLFOR($Resource.GovGrantsExternal, 'ImageScroll/CSS/style.css')}" />  
    
    <apex:outputPanel id="scriptPanel"> 
        <script type="text/javascript">
            j$ = jQuery.noConflict();
            
            j$(function() {
                j$('.banner').unslider({
                    speed: 600,               //  The speed to animate each slide (in milliseconds)
                    delay: 3000,              //  The delay between slide animations (in milliseconds)
                    complete: function() {},  //  A function that gets called after every slide animation
                    keys: true,               //  Enable keyboard (left, right) arrow shortcuts
                    dots: true,               //  Display dot navigation
                    fluid: false              //  Support responsive design. May break non-responsive designs
                });
            });
        </script>
    </apex:outputPanel>

    <div class="bs">
        <div class="row">
            <div class="loginInsertpadding">
                <div class="banner">
                    <ul>
                        <apex:repeat value="{!URLStringList}" var="URLString" >
                             <li style="background-image: url({!URLString}); background-size: 100%; min-height:285px"></li>
                        </apex:repeat>
                    </ul>
                </div>
            </div>
        </div>
    </div> 
    
</apex:page>
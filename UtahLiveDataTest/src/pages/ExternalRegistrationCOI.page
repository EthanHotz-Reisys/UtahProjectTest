<apex:page cache="false" standardController="UserRegistration__c" extensions="ExternalRegistrationCOICtrl"  sidebar="false" showHeader="false" standardStylesheets="false" >
  <style>
    #sideBarDivId{
        min-height: 0px !important;
    }
    #body{
        width: 100% !important; 
    }
    #page-content-wrapper .container-fluid .panel-body{
        display:none;
    }
    #page-content-wrapper .container-fluid .tabSection .panel-body{
        display:block !important;
    }
    .overviewHeader span.customLabelstyle {
        font-size: 15px !important;
        font-weight: bold !important;
    }
    </style> 
    <!-- Including JS and CSS resources -->
    <c:ExternalLibrary />
       
  <apex:composition template="GNT__PageTemplate">
        <apex:define name="content"> 
 
          <GNT:FlexViewLayout templateName="{!pageTemplateName}" recordId="{!recordId}" layoutType="View" rendered="{!recordId != null}"  HideSidebar="true"  hideMenubar="true"/>  

          <apex:pageMessages rendered="{!recordId == null}" />
           
        </apex:define>
  </apex:composition> 
         
</apex:page>
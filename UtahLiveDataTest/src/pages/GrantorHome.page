                          <div class="btn-group" role="group">
                           <button type="button" class="btn btn-default type" data-target="#calendar" data-toggle="tab" id="My_Workspace_Calendar">
                               <i class="fa fa-calendar"></i><span class="hidden-xs"><a >Calendar</a></span>
                           </button>
                         
                          <span id="My_Workspace_Calendar" class="hidden508 skipNavSectionItem skipNavSectionItem2" name="{\'tabName\':\'My_Workspace_Calendar\',\'type\':\'tab\',\'title\':\'Calendar\',\'tabId\':\'My_Workspace_Calendar\'}">My Workspace - Calendar</span> <!-- For 508 SkipNavigation  -->
                          </div>
                          <div class="btn-group" role="group">
                           <button type="button" class="btn btn-default type" data-target="#notes" data-toggle="tab" id="My_Workspace_Notes">
                               <i class="fa fa-book"></i><span class="hidden-xs"><a>Notes</a></span>
                           </button>
                           <span id="My_Workspace_Notes" class="hidden508 skipNavSectionItem skipNavSectionItem2" name="My_Workspace :Notes">My Workspace - Notes</span><!-- For 508 SkipNavigation  --> 
                          </div>

<apex:page showHeader="false" standardStylesheets="false">
    <head>
    <title>Home</title>
    <script>
           j$(document).ready(function(){ 
           if(document.getElementById('collabFeedWrapperID') != undefined){
               document.getElementById('collabFeedWrapperID').style.height = '502px';
           }  
            
            
            j$(".type").click(function(){
              j$(".type").removeClass("active");
               j$(this).addClass("active");
            });
            
            j$('.ui-dialog-titlebar-close').attr('aria-label', 'Close');
        });   
    </script>
    </head>
    <style>
        .padding-bottom-0{
            padding-bottom:0;
        } 
        .border-top{
            border-top:1px solid #DDDDDD;            
        } 
        .border-right{
            border-right:1px solid #DDDDDD;            
        } 
        .padding-top-5{
            padding-top:5px;
        } 
        .padding-bottom-5{
            padding-bottom:5px;
        }  
        .workspace-tab-link, .workspace-tab-link:hover{
            text-decoration: none;
            cursor:pointer;            
        }
        #collabFeedWrapperID.collabFeedWrapper{height: auto;}
    </style>
    <div class="container-fluid">
        <div class="row">   
            <div class="col-md-12" id="main-content-section">
                <GNT:TaskSummary />
                <apex:include pageName="GNT__ChartsView"/> 
            </div>

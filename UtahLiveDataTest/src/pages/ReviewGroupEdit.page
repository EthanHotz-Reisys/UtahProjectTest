<apex:page standardController="ReviewGroup__c" title="Review Group Edit" extensions="ReviewGroupEditCtrl" sidebar="false" showHeader="false" standardStylesheets="false">
    
    <!-- Including JS and CSS resources -->
    <c:ExternalLibrary />

    <apex:composition template="GNT__PageTemplate">
        <apex:define name="content">    
            <GNT:FlexEditLayout templateName="ApplicationReviewGroup" recordId="{!recordId}" layoutType="Edit" 
                flexTableParameters="{!keyValueMap}" saveURL="{!savePage}" cancelURL="{!cancelPage}"
                rendered="{!recordType != null && recordType == 'Application'}" />
            <GNT:FlexEditLayout templateName="PreapplicationReviewGroup" recordId="{!recordId}" layoutType="Edit" 
                flexTableParameters="{!keyValueMap}" saveURL="{!savePage}" cancelURL="{!cancelPage}"
                rendered="{!recordType != null && recordType == 'Preapplication'}" />   
        </apex:define>
    </apex:composition> 
</apex:page>